<?php

// get our depend file from build
$depend = json_decode(file_get_contents(__DIR__."/../build/depend.json"), true);

$dest = __DIR__."/../vendor";

// vendor
mkdir($dest);

// loop through
foreach ($depend as $pkg) {
    // get it and palce it in tmp
    $cmd = "git clone {$pkg['repo']['uri']} -b {$pkg['repo']['branch']} $dest/{$pkg['name']}";
    echo `$cmd`;
}
