#!/usr/bin/env php
<?php

// check for bolt path
$root = (getenv("BOLT_ROOT") ?: "/usr/share/pear");

define("bLogLevel", 1);

// include bolt
require("{$root}/bolt.php");

// inialize our bolt instance
// since we're in client mode
// there isn't alot we need
b::init(array(
    'load' => array(
        "$root/bolt/cli.php",
        "$root/bolt/client/*.php"
    )
));

// run in cli mode
b::run('cli');